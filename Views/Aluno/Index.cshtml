@model IEnumerable<SistemaNotasFinal.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Alunos</h1>

    @using (Html.BeginForm("Create", "Aluno", FormMethod.Get))
{
        <button>Cadastrar novo aluno</button>
}
@using (Html.BeginForm("Index", "Aluno", FormMethod.Get))
{
                    <p>
                        Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                        <input type="submit" value="Pesquisar" />
                    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdadeAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerieAluno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdadeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerieAluno)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
