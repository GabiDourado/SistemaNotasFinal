@model IEnumerable<SistemaNotasFinal.Models.Bimestre>

@{
    ViewData["Title"] = "Index";
}

<h1>Bimestres</h1>

<p>
    <a asp-action="Create">Cadastrar novo Bimestre</a>
</p>
<div>
    @using (Html.BeginForm("Index", "Bimestre", FormMethod.Get))
    {
                    <p>
                        Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                        <input type="submit" value="Pesquisar" />
                    </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BimestreAno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BimestreDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BimestreAno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BimestreDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
