@model IEnumerable<SistemaNotasFinal.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nova nota</a>
</p>
<div>
    @using (Html.BeginForm("Index", "Nota", FormMethod.Get))
    {
                <p>
                    Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                    <input type="submit" value="Pesquisar" />
                </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bimestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notas1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notas2)
            </th>
            <th>
                Média
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="notas">
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materia.MateriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bimestre.BimestreDescricao)
            </td>
            <td class="nota01">
                @Html.DisplayFor(modelItem => item.Notas1)
            </td>
            <td class="nota02">
                @Html.DisplayFor(modelItem => item.Notas2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Media)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
