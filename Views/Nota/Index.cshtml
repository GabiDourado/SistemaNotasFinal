@model IEnumerable<SistemaNotasFinal.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bimestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notas1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notas2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Aluno.NomeAluno)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Materia.MateriaNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Bimestre.BimestreDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notas1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notas2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
