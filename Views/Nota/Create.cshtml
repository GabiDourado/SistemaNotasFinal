@model SistemaNotasFinal.Models.Nota

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Nota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoId" class="control-label"></label>
                <select asp-for="AlunoId" class ="form-control" asp-items="ViewBag.AlunoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label"></label>
                <select asp-for="MateriaId" class ="form-control" asp-items="ViewBag.MateriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BimestreId" class="control-label"></label>
                <select asp-for="BimestreId" class ="form-control" asp-items="ViewBag.BimestreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Notas1" class="control-label"></label>
                <input asp-for="Notas1" class="form-control" />
                <span asp-validation-for="Notas1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notas2" class="control-label"></label>
                <input asp-for="Notas2" class="form-control" />
                <span asp-validation-for="Notas2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
