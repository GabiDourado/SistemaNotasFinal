@model IEnumerable<SistemaNotasFinal.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<h1>Professores</h1>

    @using (Html.BeginForm("Create", "Professor", FormMethod.Get))
{
        <button>Cadastrar novo de Professor</button>
}
<div>
    @using (Html.BeginForm("Index", "Professor", FormMethod.Get))
    {
                <p>
                    Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                    <input type="submit" value="Pesquisar" />
                </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProfessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorFormacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoTrabalho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProfessor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorFormacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoTrabalho)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Materia.MateriaNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
