<head>
    <link rel="stylesheet" href="~/css/Materia.css" asp-append-version="true" />
</head>
@model IEnumerable<SistemaNotasFinal.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Matérias</h1>


@using (Html.BeginForm("Create", "Materia", FormMethod.Get))
{
    <button>Adicionar nova materia</button>
}
<div>
    @using (Html.BeginForm("Index", "Materia", FormMethod.Get))
    {
        <p>
            Digite aqui sua pesquisa: @Html.TextBox("Pesquisa")
            <input type="submit" value="Pesquisar" />
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MateriaNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MateriaNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
